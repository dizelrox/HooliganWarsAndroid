<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dizelrox.hooliganwarsandroid" >

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens android:smallScreens="false"
        android:normalScreens="false"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:requiresSmallestWidthDp="600" />

    <application
        android:name=".Logic.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/android_icon"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >

        <activity
            android:name=".GUI.Splash"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GUI.SignUp_Activity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_sign_up_" >
        </activity>
        <activity
            android:name=".GUI.Login_Activity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_login_" >
        </activity>
        <activity
            android:name=".GUI.Character_Activity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_character_" >
        </activity>
        <activity
            android:name=".GUI.Battle_Activity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_battle_" >
        </activity>
        <activity
            android:name=".GUI.Main_Activity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_splash" >
        </activity>
    </application>

</manifest>
